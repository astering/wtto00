---
import { getCollection } from 'astro:content'
import Layout from '@/layouts/Layout.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import LinkButton from '@/components/LinkButton.astro'
import Hr from '@/components/Hr.astro'
import Card from '@/components/Card'
import Socials from '@/components/Socials.astro'
import getSortedPosts from '@/utils/getSortedPosts'
import slugify from '@/utils/slugify'
import { SITE, SOCIALS } from '@/config'

const posts = await getCollection('blog')

const sortedPosts = getSortedPosts(posts)
const featuredPosts = sortedPosts.filter(({ data }) => data.featured)

const socialCount = SOCIALS.filter((social) => social.active).length
---

<Layout>
  <Header />
  <main id='home-main-content'>
    <section id='hero' class='pb-6 pt-8'>
      <h1 class='text-3xl font-bold'>
        <span>
          Hi, I'm wtto.
          <span class='animate-wave-hands origin-[70%_70%] inline-block'> 👋</span></span
        >
      </h1>
      <div class='mt-6 space-y-2'>
        <p class='flex items-center'>
          A JavaScript
          <span
            class='shrink-0 transition-colors duration-300 ease-in font-mono flex items-center hover:bg-#000/3 dark:hover:bg-#fff/3 rd-md px-2 py-0.5 relative after:absolute after:top-1/10 after:right-0.5 after:h-4/5 after:b-r-[currentColor] after:b-r-2 after:content-empty after:animate-blink-text-cursor'
          >
            &lt;Developer /&gt;
          </span>
        </p>
        <p>Just coding with a spirited and love 🧡.</p>
      </div>

      {
        // only display if at least one social link is enabled
        socialCount > 0 && (
          <div class='mt-4 flex flex-col sm:flex-row sm:items-center'>
            <Socials class:list={'mb-1 mr-2 whitespace-nowrap sm:mb-0'} />
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id='featured' class='pb-6 pt-12'>
            <h2 class='text-2xl font-semibold tracking-wide'>推荐</h2>
            <ul>
              {featuredPosts.map(({ data }) => (
                <Card href={`${SITE.base}/posts/${slugify(data)}`} frontmatter={data} secHeading={false} />
              ))}
            </ul>
          </section>
          <Hr />
        </>
      )
    }

    <section id='recent-posts' class='pb-6 pt-12'>
      <h2 class='text-2xl font-semibold tracking-wide'>最新</h2>
      <ul>
        {
          sortedPosts
            .filter(({ data }) => !data.featured)
            .map(
              ({ data }, index) =>
                index < 4 && <Card href={`${SITE.base}/posts/${slugify(data)}`} frontmatter={data} secHeading={false} />
            )
        }
      </ul>
      <div class='my-8 text-center'>
        <LinkButton href={`${SITE.base}/posts`}>
          查看所有
          <i class="i-custom-arrow-right text-2xl"></i>
        </LinkButton>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
