---
import { SITE, SOCIALS } from '@/config'
import LinkButton from './LinkButton.astro'
import socialIcons from '@/assets/socialIcons'

export interface Props {
  centered?: boolean
}

const { centered = false } = Astro.props
---

<div class='flex-wrap flex justify-center gap-1' class:list={{ flex: centered }}>
  {
    SOCIALS.filter((social) => social.active).map((social) => (
      <LinkButton href={social.href} className='p-2 hover:rotate-6 sm:p-1 text-0' title={social.linkTitle} target='_blank'>
        <Fragment set:html={socialIcons[social.name]} />
      </LinkButton>
    ))
  }
  <LinkButton
    href={`${SITE.base}/rss.xml`}
    className='p-2 hover:rotate-6 sm:p-1 text-0'
    aria-label='rss feed'
    title='RSS Feed'
    target='_blank'
  >
    <i class='i-custom-rss inline-block h-7.5 w-7.5 c-accent sm:(w-6.6 h-6.6)'></i>
  </LinkButton>
</div>
