---
import type { CSSProperty } from 'astro/types'
export interface Props {
  href: string
  className?: string
  ariaLabel?: string
  title?: string
  disabled?: boolean
  target?: astroHTML.JSX.HTMLAttributeAnchorTarget
}

const { href, className, ariaLabel, title, disabled = false, target } = Astro.props
---

<a
  href={disabled ? '#' : href}
  tabindex={disabled ? '-1' : '0'}
  class={`group inline-block ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
  target={target}
>
  <slot />
</a>

<style>
  a {
    @apply hover:text-skin-accent;
  }
</style>
