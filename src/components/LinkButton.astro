---
import type { JSX } from 'solid-js'
export interface Props {
  href: string
  className?: string
  ariaLabel?: string
  title?: string
  disabled?: boolean
  target?: astroHTML.JSX.HTMLAttributeAnchorTarget
  children: JSX.Element
}

const { href, className, ariaLabel, title, disabled = false, target } = Astro.props
---

<a
  href={disabled ? '#' : href}
  tabindex={disabled ? '-1' : '0'}
  class={`group inline-flex justify-center items-center ${disabled ? 'op-50 pointer-events-none' : 'hover:c-accent'} ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
  target={target}
>
  <slot />
</a>
